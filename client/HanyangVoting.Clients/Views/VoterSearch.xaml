                    <TextBlock FontSize="40">2013011037</TextBlock>
                    <TextBlock  Margin="50,0,0,0" FontSize="40">류형욱</TextBlock>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Margin="0,17,0,0" Orientation="Horizontal">
